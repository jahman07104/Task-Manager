<div class="jumbotron center">
  <h1>Welcome <%= current_user.name %> </h1>
  <h2> create tickets here </h2>
  <%= link_to "Add Ticket", new_ticket_path, class:'btn btn-success' %>
</div>

<h2>Tickets</h2>
<%if @tickets.empty? %>
  <p>No tickets</p>
<%else%>
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Customer Name</th>
        <th>Customer Address</th>
        <th>Phone Number</th>
        <th></th>
      </tr>
    </thead>  
    <tbody>
      <%= render @tickets %>
    </tbody>
  </table>
<% end %>
 
 <h2>My assigned Tickets</h2>
<%if @troubleshooting_tasks.empty? %>
  <p>you dont have any Tasks at the moment</p>
<%else%>
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Description</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>  
    <tbody>
      <%= render @troubleshooting_tasks %>
    </tbody>
  </table>
<% end %>

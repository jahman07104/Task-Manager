<div class="jumbotron center">
  <h1>Welcome <%= current_user.name %> </h1>
  <h2> create tickets here </h2>
  <%= link_to "Add Ticket", new_ticket_path, class:'btn btn-success' %>
</div>

<h2>My tickets</h2>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Customer Address</th>
      <th>Phone Number</th>
      <th></th>
    </tr>
  </thead>  
  <tbody>
    <%= render @tickets %>
  </tbody>
</table>
 
 <h2>My assigned Tasks</h2>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>  
  <tbody>
    <%= render @troubleshooting_tasks %>
  </tbody>
</table>
